{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "baseUrl": ".",
    "paths": {
      "_/*": ["src/*"],
      "_public/*": ["public/*"],
      "_main/*": ["src/main/*"],
      "_models/*": ["src/models/*"],
      "_renderer/*": ["src/renderer/*"],
      "_utils/*": ["src/utils/*"],
      "_assets/*": ["assets/*"]
    },
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "target": "esnext"
  },
  "exclude": ["node_modules"]
}
